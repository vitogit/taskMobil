    <h1>Listing tasks</h1>

    <table  class="table table-striped table-condensed">
      <thead>
        <tr>
          <th style="width:50%"></th>
          <!--<th>Status</th>-->
          <th></th>
          <th style="width:40%"></th>
        </tr>
      </thead>

      <tbody id="tasks">
        <% @tasks.each do |task| %>
             <%= render "task", :task => task %>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Task', new_task_path , :remote => true, :id => "new_task_link",  :class => "btn btn-primary"%>

